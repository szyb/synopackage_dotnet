{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    },
    "Console": {"LogLevel": {"Default": "Error"}}

  },
  "AppSettings": {
    "DefaultModel": "DS220+",
    "DefaultVersion": "6.2.3-25426",
    "FrontendCacheFolder": "wwwroot/cache/",
    "BackendCacheFolder": "cache/",
    "CacheIconExpirationInDays": null,
    "CacheSpkServerResponse": true,
    "CacheSpkServerResponseTimeInHours": 1,
    "DownloadTimeoutInSeconds": 15,
    "DownloadService": "RestSharp",
    "DefaultItemsPerPage": 5,
    "EnableProxyDownloadForInsecureProtocol": true
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogFile": "Logs/nlog.log",
    "internalLogLevel": "Debug",
    "extensions": [
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],
    "targets": {
      "async": false,
      "allfile": {
        "type": "file",
        "filename": "Logs/synopackage-all-${date:yyyyMMdd}.log"
      },
      "searchfile": {
        "type": "file",
        "filename": "Logs/synopackage-search-${date:yyyyMMdd}.log",
        "layout": "${longdate}|${message}"
      },
      "downloadfile": {
        "type": "file",
        "filename": "Logs/synopackage-download-${date:yyyyMMdd}.log"
      },
      "console": {
        "type": "console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "writeTo": "allfile"
      },
      {
        "logger": "*",
        "writeTo": "console"
      },
      {
        "logger": "synopackage_dotnet.Model.Services.SpkService",
        "minLevel": "Info",
        "maxLevel": "Info",
        "writeTo": "searchfile"
      },
      {
        "final": true,
        "logger": "synopackage_dotnet.Model.Services.DownloadSpkService",
        "minLevel": "Info",
        "maxLevel": "Info",
        "writeTo": "downloadfile"
      },

      {
        "final": true,
        "logger": "*",
        "writeTo": "allfile"
      }
    ]
  }  
}
